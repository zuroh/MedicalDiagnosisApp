<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


     <TextView
                android:id="@+id/funView"
                android:layout_width="370dp"
                android:layout_height="130dp"
                android:layout_alignTop="@id/instr"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-155dp"

                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="19sp"
                app:fontFamily="@font/average_sans"
                android:background="@drawable/rounded_corner"/>


        <TextView
            android:id="@+id/instr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btnHeartAttack"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-55dp"
            android:text="Select Medical Emergency:"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="26sp"
            android:textStyle="bold"
            app:fontFamily="@font/average_sans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.191" />

        <Button
            android:id="@+id/btnStroke"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Stroke"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnHeartAttack"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btnStroke"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-55dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Heart Attack"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnHeatExhaustion"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/btnStroke"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-55dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Heat Exhaustion"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnTrauma"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/btnHeatExhaustion"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-55dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Major Trauma"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/unsure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not listed or unsure? Click 'Diagnose' below"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/btnTrauma"
            android:layout_marginBottom="-100dp"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="19sp"
            />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/btm_navigation_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="0dp"
            app:menu="@menu/nav_menu"
            app:labelVisibilityMode="labeled">

        </android.support.design.widget.BottomNavigationView>


    </RelativeLayout>


</LinearLayout>

