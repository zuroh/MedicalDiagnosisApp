<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.medicaldiagnosisapp"
    tools:ignore="ExtraText">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@menu/admin_navigation_items" />

        <activity android:name=".activity.LocateActivity" />
        <activity
            android:name=".activity.AdminActivityFinal"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.AdminActivity3"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.AdminActivity2"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.AdminActivity1"
            android:launchMode="singleTask" />
        <activity android:name=".activity.PolyActivity" />
        <activity android:name=".activity.ChasActivity" />
        <activity android:name=".activity.AedActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.ChangeLanguageActivity" />
        <activity android:name=".activity.HeatActivity" />
        <activity android:name=".activity.PoisonActivity" />
        <activity android:name=".activity.AllergicActivity" />
        <activity android:name=".activity.BoneActivity" />
        <activity android:name=".activity.MajorTraumaActivity" />
        <activity android:name=".activity.BurnActivity" />
        <activity android:name=".activity.HeartAttackActivity" />
        <activity android:name=".activity.StrokeActivity" />
        <activity android:name=".activity.FinalDiagnosisActivity" />
        <activity android:name=".activity.DiagnoseActivityPage3" />
        <activity android:name=".activity.HelpActivity" />
        <activity android:name=".activity.InformationActivity" />
        <activity android:name=".activity.ContactActivity" />
        <activity android:name=".activity.DiagnoseActivityPage2" />
        <activity android:name=".activity.DiagnoseActivityPage1" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/gmaps_api_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>